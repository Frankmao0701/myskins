<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/relation.dialog.list.item.title"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:paddingLeft="42dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="父亲"/>


    <View
        android:id="@+id/relation.dialog.list.item.selected"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="24dp"
        android:background="@mipmap/ic_dots_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/relation.dialog.list.item.title"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>