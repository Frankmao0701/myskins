<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_popup_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/dropdown_menu_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/feed.popup.share"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="70dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="@string/title_publish_share"
                android:textColor="@color/color_f5f5f5"
                android:textSize="14sp"
                tools:text="分享" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_000000" />

            <TextView
                android:id="@+id/feed.popup.activity"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="70dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="@string/title_publish_event"
                android:textColor="@color/color_f5f5f5"
                android:textSize="14sp"
                tools:text="活动" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>