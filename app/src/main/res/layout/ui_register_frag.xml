<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- account -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="62dp"
        android:paddingRight="16dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register.account.input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/register.account.edt"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/hint_phone_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_787878"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ebebeb" />

    <!-- password -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="62dp"
        android:paddingRight="16dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register.passwd.input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/register.passwd.edt"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/hint_register_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_787878"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ebebeb" />

    <!-- verify-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="62dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/register.verify.btn"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_5c5c5c_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="@string/title_send_verify_code"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register.verify.input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/register.verify.btn"
            android:gravity="center_vertical"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/register.verify.edt"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/hint_register_verify_code"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_787878"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ebebeb" />

    <Button
        android:id="@+id/register.submit.btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_5c5c5c_bg"
        android:text="@string/title_register_and_agree"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/register.protocal.btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:background="@null"
        android:text="@string/title_register_protocal"
        android:textColor="@color/color_787878"
        android:textSize="16sp" />

</LinearLayout>