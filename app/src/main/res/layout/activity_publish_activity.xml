<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/publish_activity_toolbar"
        style="@style/Linkin_NavigationBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linkin.actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetStartWithNavigation="0dp"
        app:titleTextAppearance="@style/Linkin_Toolbar_TitleText_Dark"
        app:titleTextColor="@android:color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_activity_title"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_activity_title"
                    android:textColor="@color/color_253335"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/publish.activity.title.value.tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/tv_activity_title"
                    android:text="@string/text_input_activity_title"
                    android:textColor="@color/color_787878"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_theme_pic"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_theme_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_theme_pic"
                    android:textColor="@color/color_253335" />

                <ImageView
                    android:id="@+id/img_theme_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/tv_theme_pic"
                    android:src="@mipmap/ic_share_add1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_activity_content"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_activity_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_activity_content"
                    android:textColor="@color/color_253335"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_activity_content_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/tv_activity_content"
                    android:text="@string/text_input_activity_content"
                    android:textColor="@color/color_787878"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_activity_time"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_activity_time"
                    android:textColor="@color/color_253335"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_activity_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/tv_activity_time"
                    android:text="@string/text_input_activity_time"
                    android:textColor="@color/color_787878"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_activity_address"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_activity_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_activity_address"
                    android:textColor="@color/color_253335"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_activity_address_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/tv_activity_address"
                    android:text="@string/text_input_activity_address"
                    android:textColor="@color/color_787878"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_choose_need_reply"
                    android:textColor="@color/color_253335" />

                <com.mykins.linkin.view.SwitchButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:sb_checked_color="@color/color_62c554" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_choose_need_stat"
                    android:textColor="@color/color_253335" />

                <com.mykins.linkin.view.SwitchButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:sb_checked_color="@color/color_62c554" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_choose_need_money"
                    android:textColor="@color/color_253335" />

                <com.mykins.linkin.view.SwitchButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:sb_checked_color="@color/color_62c554" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_rang_rl"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="18dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/text_activity_range"
                    android:textColor="@color/color_253335" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ebebeb" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>