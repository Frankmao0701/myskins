<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_detail_toolbar"
        style="@style/Linkin_NavigationBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linkin.actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetStartWithNavigation="0dp"
        app:titleTextAppearance="@style/Linkin_Toolbar_TitleText_Dark"
        app:titleTextColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/profile.add.avatar.rl"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/profile.add.avatar.img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile.add.avatar.img"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/profile.add.avatar.img"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/profile.add.name.tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猪八戒"
                android:textColor="@color/color_3f4c4d"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/profile.add.id.tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="ID78787"
                android:textColor="@color/color_7d7d7d"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/ll_user_info"
            android:drawableLeft="@mipmap/ic_location"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="广东深圳"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_ebebeb" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周五晚上烧烤"
                    android:textColor="@color/text_color_normal"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_activity_theme"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="80dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="周五晚上大家一起出来打球，好久不见，甚是想念！"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="活动时间: 2018年10月30日"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="活动地点: 大梅沙"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="报名截止: 2019年11月1日"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="已报名: 20人"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="已获赞助: 20元"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="倒数时间: 2天5小时30分钟"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/font_14" />
                <!--<TextView-->
                <!--android:id="@+id/tv_publish_time"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="2018年11月1日"-->
                <!--android:textColor="@color/text_color_gray"-->
                <!--android:textSize="@dimen/font_14" />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_ebebeb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_reply"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_tranparent_bg"
                        android:text="@string/reply"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/font_16" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_tranparent_bg"
                        android:text="@string/sponsor"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>